      "types": "./dist/database/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^20.0.0"
  }
